                                    <th>Email</th>
                                    <th>Mobile</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(users.length > 0) { %>
                                    <% users.forEach(user => { %>
                                        <tr>
                                            <td width="40%">
                                                <a href="#" class="itemside">
                                                    <div class="left">
                                                        <img src="assets/imgs/people/avatar-1.png" class="img-sm img-avatar" alt="Userpic" />
                                                    </div>
                                                    <div class="info pl-3">
                                                        <h6 class="mb-0 title"><%= user.name %> </h6>
                                                        <small class="text-muted"></small>
                                                    </div>
                                                </a>
                                            </td>
                                            <td><%= user.email %></td>
                                            <td><span class=""><%= user.mobile %></span></td>
                                            <td class="text-end">
                                                <% if(user.is_blocked) { %>
                                                    <a href="#" class="btn btn-sm btn-danger rounded font-sm mt-15" id="status_btn<%= user._id %>" onclick="blockuser('<%= user._id %>')">Unblock</a>
                                                <% } else { %>
                                                    <a href="#" class="btn btn-sm btn-brand rounded font-sm mt-15" id="status_btn<%= user._id %>" onclick="blockuser('<%= user._id %>')">Block</a>
                                                <% } %>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="4">No users found</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
