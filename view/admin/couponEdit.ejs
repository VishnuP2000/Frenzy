<body>
    <div class="screen-overlay"></div>
    <%- include('../layouts/aside.ejs') %>
   
    <main class="main-wrap">
        <%- include('../layouts/adminHeader.ejs') %>
       
        <section class="content-main">
            
            
            <form action="/admin/couponEdit?id=<%=coupid%>" method="post"  class="p-4 shadow-sm bg-light rounded">
             
                
                    

               <div>
                <div class="mb-4">
                    <h2 class="content-title card-title text-center">Edit coupon</h2>
                </div>
               
                <div class="form-group">
                    <label for="productOffer">COUPON CODE</label>
                  <div style="display: flex;">
                    <div style="border: 1px solid black; width: 169px;"  ><%=coupondata.couponCode%></div>
                    <input id="couponCode_field" type="text" name="couponName" hidden>
                
                  </div>
                        
                        
                    </select>
                </div>
                <div class="form-group">
                    <label for="discount">Discount (%)</label>
                    <input value="<%=coupondata.discount%>" type="number" class="form-control" id="discount" name="discount" min="0" max="100" placeholder="Discount" >
                </div>
                <div class="form-group">
                    <label for="discount">Cryteria Amount </label>
                    <input value="<%=coupondata.criteriaAmount%>" type="number" class="form-control" id="discount" name="Amount" placeholder="Amount">
                </div>
                <div class="form-group">
                    <label for="expiryDate">Expiry Date</label>
                    
                    <input value="<%=coupondata.expireDate%>" type="date" class="form-control" id="expiryDate" name="expiryDate" required>
                    <input value="<%=coupondata.expireDate%>" type="hidden"  class="form-control" id="Date" required>
                </div>
               </div>
               
              

             
               
                <button type="submit" class="btn btn-primary w-100">Save</button>
            </form>
        </section>

        <footer class="main-footer font-xs mt-5">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
