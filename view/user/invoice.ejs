<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    

    
    
    

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f9;
            margin: 20px;
        }

        .container {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        h1 {
            font-size: 36px;
            margin-bottom: 40px;
            text-align: center;
            color: #333;
        }

        .invoice-header {
            margin-bottom: 40px;
            padding: 20px;
            background-color: #f8f9fa;
            border-radius: 5px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        }

        h2 {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .billing-info p, .order-details p {
            font-size: 16px;
            line-height: 1.6;
            margin-bottom: 10px;
        }

        .table {
            width: 100%;
            margin-top: 20px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        }

        .table th {
            background-color: #e9ecef;
            color: #333;
        }

        .table th, .table td {
            padding: 15px;
            text-align: center;
            vertical-align: middle;
        }

        .download-button {
            text-align: center;
            margin-top: 30px;
        }

        .download-button button {
            background-color: #28a745;
            color: white;
            padding: 12px 25px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .download-button button:hover {
            background-color: #218838;
        }
    </style>
</head>
<body>
    
    
    <div class="container" id="invoiceId" style="background-color: darkgray;">
       <div style="background-color: slategray; border-radius: 20px;">
        <h1 style="font-size: 65px;">Invoice</h1>
        <h2 class="text-center frenzy-title" style="font-family: cursive;">FRENZY</h2>
       </div>
        <% console.log(' invoice head') %>
        <%if(invoiceData.length>0){%>
            
           <% console.log('reach the invoice',invoiceData) %>
           <% invoiceData.forEach((DataInvoice)=>{%>

         
            <% console.log('reach the DataInvoice',DataInvoice) %>
            

                <p style="text-align: end;"><strong>Date:</strong><%=DataInvoice.purchaseData%></p>
        
        <div class="row invoice-header" style="background-color: darkgray;">
            <div class="col-md-6 billing-info">
                <h2>Billing Information</h2>
                <p><strong>Name:</strong>Frenzy</p>
                <p><strong>Address:</strong>kzp street,edavannapara,kerala,india</p>
                <p><strong>Phone:</strong>1234567892</p>
                <p><strong>Email:</strong>Frenzy@gmail.com</p>
            </div>
            <!-- Billing Information -->
            <div class="col-md-6 billing-info">
                <h2>Shiping information Information</h2>
                <p><strong>Name:</strong><%=DataInvoice.shipAddress.firstName%></p>
                <p><strong>Address:</strong><%=DataInvoice.shipAddress.streetName%>,<%=DataInvoice.shipAddress.town%>,<%=DataInvoice.shipAddress.state%>,<%=DataInvoice.shipAddress.country%>,<%=DataInvoice.shipAddress.postCode%></p>
                <p><strong>Phone:</strong><%=DataInvoice.shipAddress.phone%></p>
                <p><strong>Email:</strong><%=DataInvoice.shipAddress.email%></p>
            </div>

            <!-- Order Details -->
            <!-- <div class="col-md-6 order-details">
                <h2>Order Details</h2>
                <p><strong>Order ID:</strong><%=DataInvoice.orderId%></p>
                <p><strong>Order Date:</strong><%=DataInvoice.purchaseData%></p>
                <p><strong>Payment Method:</strong><%=DataInvoice.paymentMethode%></p>
                <p><strong>Payment Status:</strong><%=DataInvoice.orderdProducts[0].status%></p>
            </div> -->
        </div>
      
       
        <!-- Products Table -->
        <div class="table-responsive mt-4">
            <table class="table table-bordered">
                <thead class="table-light">
                    <tr>
                        <th style="background-color: gray;">Product Name</th>
                        <th style="background-color: gray;">Quantity</th>
                        <th style="background-color: gray;">offer</th>
                        <th style="background-color: gray;">Price</th>
                        <th style="background-color: gray;">Total</th>
                    </tr>
                </thead>
                
                <tbody>
                    <% console.log('first if the invoiceData') %>
                    <% if (DataInvoice && DataInvoice.orderdProducts && DataInvoice.orderdProducts.length > 0) { %>
                        <% console.log('if the invoiceData',invoiceData) %>
                        
                        <% DataInvoice.orderdProducts.forEach((invoiceProduct)=>{ %>
                            <tr>
                                <td><%= invoiceProduct.product.name %></td>
                                <td><%= invoiceProduct.quantity %></td>
                                <td>₹<%=Math.floor( DataInvoice.orderdProducts[0].product.price-DataInvoice.orderdProducts[0].product.finalPrice )  %></td>
                                <td>₹<%=Math.floor( DataInvoice.orderdProducts[0].price  )  %></td>
                                <td>₹<%=Math.floor(DataInvoice.orderdProducts[0].product.finalPrice*DataInvoice.orderdProducts[0].quantity )  %></td>
                                
                                
                            </tr>
                          
                            <% }); %>
                            <% } else { %>
                                <tr>
                            <td colspan="4" class="text-center">No product data available.</td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            

                <div class="row">
                    <div class="col-md-6 offset-md-6 invoice-summary">
                        <h5 style="margin-left: 123px;font-family: system-ui;">Summary</h5>
                        <table class="table">
                            <tbody style="background-color: silver;">
                                <tr>
                                    <td>Subtotal</td>
                                    <td class="text-end">₹  <%=Math.floor(DataInvoice.subTotal )-50%>
                                       
                                    </td>
                                </tr>
                                <tr>
                                    <td>Shipping</td>
                                    <td class="text-end">₹ 50</td>
                                </tr>
                                
                                <tr>
                                    <td><strong>Total</strong></td>
                                    
                                    <td class="text-end"><strong>₹  <%=Math.floor(DataInvoice.subTotal )%></strong></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                
            </div>

        <!-- Download Button -->
       
        <%  }) %>
        <% }else{%>
            NO INVOICE DATA
        <%}  %>
    </div>
    <div class="download-button">
        <button class="btn btn-success" id="invoiceDownload">Download as PDF</button>
    </div>

    <!-- Bootstrap JS (Optional for Bootstrap components) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

