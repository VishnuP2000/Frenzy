							    <div class="tab-pane fade show active" id="register-2" role="tabpanel" aria-labelledby="register-tab-2">

							    	<form action="/login" method="post" onsubmit="return validateForm()">
                                        <div class="form-group">
                                            <p id="message_id" class="text-danger"></p>
                                            <p style="color: red; font-size: 21px;"><%= block %></p>
                                            <script>
                                                setTimeout(function() {
                                                    const error = document.getElementById('message_id');
                                                    error.textContent = '';
                                                }, 2000);
                                    
                                                function validateEmail(email) {
                                                    const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                                                    return re.test(String(email).toLowerCase());
                                                }
                                    
                                                function validateForm() {
                                                    let valid = true;
                                                    const email = document.getElementById('register-email-2').value;
                                                    const password = document.getElementById('register-password-2').value;
                                                    const checkbox = document.getElementById('register-policy-2');
                                                    const errorElement = document.getElementById('message_id');
                                    
                                                    // Reset error messages
                                                    errorElement.textContent = '';
                                    
                                                    if (!validateEmail(email)) {
                                                        errorElement.textContent = 'Please enter a valid email address.';
                                                        valid = false;
                                                    }
                                    
                                                    if (password.length < 6) {
                                                        errorElement.textContent = 'Password must be at least 6 characters long.';
                                                        valid = false;
                                                    }
                                    
                                                    if (!checkbox.checked) {
                                                        errorElement.textContent = 'You must agree to the privacy policy.';
                                                        valid = false;
                                                    }
                                    
                                                    return valid;
                                                }
                                            </script>
                                            <input type="email" placeholder="Your email address" class="form-control" id="register-email-2" name="email">
                                        </div>
                                    
                                        <div class="form-group">
                                            <input type="password" placeholder="password" class="form-control" id="register-password-2" name="password">
                                        </div>
                                    
