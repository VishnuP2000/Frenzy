    <script>
        const addForm=document.getElementById('addressForm');
        addForm.addEventListener('submit',(event)=>{
            event.preventDefault();
            console.log('enter the address form')
            
            const name=document.getElementById('firstName').value
            const lastName=document.getElementById('lastName').value
            const phone=document.getElementById('phone').value
            const email=document.getElementById('email').value
            const street=document.getElementById('street').value
            const town=document.getElementById('town').value
            const state=document.getElementById('state').value
            const postalCode=document.getElementById('postalCode').value
            const country=document.getElementById('country').value


            const errorFirstName=document.getElementById('errorFirstName')
            const errorLastName=document.getElementById('errorLastName')
            const errorMobil=document.getElementById('errorMobil')
            const errorEmail=document.getElementById('errorEmail')
            const erroStreet=document.getElementById('erroStreet')
            const erroTown=document.getElementById('erroTown')
            const errorState=document.getElementById('errorState')
            const errorPostCode=document.getElementById('errorPostCode')
            const errorcountry=document.getElementById('country')
            const errorCountry=document.getElementById('errorCountry')

            errorFirstName.innerHTML='';
            errorLastName.innerHTML='';
            errorMobil.innerHTML='';
            errorEmail.innerHTML='';
            erroStreet.innerHTML='';
            erroTown.innerHTML='';
            errorState.innerHTML='';
            errorPostCode.innerHTML='';


            if(name.trim()==''){
                console.log('enter the Firstname')
                errorFirstName.innerHTML='please enter the Firstname';
                return false;
            }
            if(lastName.trim()==''){
                errorLastName.innerHTML='please enter the Lastname';
                return false;
            }
            const phoneRegex = /^\d{10}$/;
            if (!phoneRegex.test(phone)) {
                errorMobil.innerHTML = 'Please enter a valid 10-digit mobile number';
                return false
            }

            const emailRegex = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
            if (!emailRegex.test(email)) {
                errorEmail.innerHTML = 'Please enter a valid email';
                return false
            }

            if(street.trim()==''){
                erroStreet.innerHTML='please enter the street name'
                return false
            }
            if(town.trim()==''){
                erroTown.innerHTML='please enter the town name'
                return false
            }
            if(state.trim()==''){
                errorState.innerHTML='please enter the state name'
                return false
            }
            addForm.submit();
        })

    </script>
</body>
