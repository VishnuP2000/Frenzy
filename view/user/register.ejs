    <script>
        const tform = document.getElementById("form");
    
        form.addEventListener('submit', (event) => {
            event.preventDefault();
            console.log('hello');
    
            const name = document.getElementById('username').value;
            const email = document.getElementById('email').value;
            const number = document.getElementById('number').value;
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;

    
            const errorName = document.getElementById("error_userName");
            const errorMail = document.getElementById('error_email');
            const errorMobile = document.getElementById('error_mobile');
            const errorPassword = document.getElementById('error_password');
            const errorconfirmPassword = document.getElementById('error_confirmPassword');


    
            // Clear previous error messages
            errorName.innerHTML = '';
            errorMail.innerHTML = '';
            errorMobile.innerHTML = '';
            errorPassword.innerHTML = '';
            errorconfirmPassword.innerHTML = '';

    
            // Check if name is empty
            if (name.trim() === "") {
                errorName.innerHTML = 'Please enter the name';
                return false
            }
    
            // Check if email is valid
            const emailRegex = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
            if (!emailRegex.test(email)) {
                errorMail.innerHTML = 'Please enter a valid email';
                return false
            }
    
            // Check if password is at least 6 characters long
            if (password.length < 6) {
                errorPassword.innerHTML = 'Please enter a password with at least 6 characters';
                return false
            }
        //check if confirmPasword equal or not
        if (password !== confirmPassword) {
                errorconfirmPassword.innerHTML = 'password is not match'
                return false;
            }
        
        
    
            // Check if phone number is valid
            const phoneRegex = /^\d{10}$/;
            if (!phoneRegex.test(number)) {
                errorMobile.innerHTML = 'Please enter a valid 10-digit mobile number';
                return false
            }
            form.submit();
        });
       
    

        function togglePasswordVisibility() {
        var passwordField = document.getElementById('confirmPassword');
        
        if (passwordField.type === 'password') {
            passwordField.type = 'text';
            
        } else {
            passwordField.type = 'password';
        }
        
    }
    
</script>


